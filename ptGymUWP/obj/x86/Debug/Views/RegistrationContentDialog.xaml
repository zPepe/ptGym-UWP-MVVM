<ContentDialog x:ConnectionId='1'
    x:Class="ptGymUWP.Views.RegistrationContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ptGymUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Registro"
    PrimaryButtonText="OK"
    SecondaryButtonText="Cancel"
                                                         
                                                             >

    <StackPanel>
        <TextBox x:ConnectionId='2' Header="Referência"                                                                    />
        <DatePicker x:ConnectionId='3' x:Name="date" Header="Data" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <TimePicker x:ConnectionId='4' x:Name="time" Header="Hora" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <TextBox x:ConnectionId='5' Header="Valor"                                                                      />
        <ComboBox x:ConnectionId='6' Width="300"
                  x:Name="ComboBoxClient"
                  Header="Nome do Cliente"
                                                             
                  SelectedValuePath="Id"
                  DisplayMemberPath="Name"
                                                                    >
        </ComboBox>
        <ComboBox x:ConnectionId='7' Width="300"
                  x:Name="ComboBoxClass"
                  Header="Aula"
                                                             
                  SelectedValuePath="Id"
                  DisplayMemberPath="Name"
                                                                   >
        </ComboBox>
    </StackPanel>
</ContentDialog>

