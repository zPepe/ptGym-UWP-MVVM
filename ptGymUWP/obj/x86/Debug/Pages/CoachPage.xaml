<Page x:ConnectionId='1'
    x:Class="ptGymUWP.Pages.CoachPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ptGymUWP.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:bl="using:ptGym_Dal_BL.BL"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='2' Icon="Add" Label="Adicionar Treinador" ToolTipService.ToolTip="Adicionar Treinador"                             />
        </CommandBar>
    </Page.BottomAppBar>

    <Page.Resources>
        <MenuFlyout x:Key="FlyoutBase1">
            <MenuFlyoutItem x:ConnectionId='3' Text="Edit"                   />
            <MenuFlyoutItem x:ConnectionId='4' Text="Remove"                     />
        </MenuFlyout>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <RelativePanel Grid.Column="0" Margin="20,20,20,20">
            <ListView x:ConnectionId='10' Header="Lista de Treinadores" FontSize="15" FontFamily="Courier New" FontWeight="Thin"                                              >
                <ListView.ItemTemplate>
                    <DataTemplate                      >
                        <StackPanel x:ConnectionId='11' Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    FlyoutBase.AttachedFlyout="{StaticResource FlyoutBase1}" 
                                                                        
                                    Background="DarkCyan"
                                    CornerRadius="20" Padding="1"
                                    BorderBrush="White" BorderThickness="4">
                            <TextBlock x:ConnectionId='12' FontSize="20"
                                                                       
                                       Width="360" 
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="Wheat"
                                       FontFamily="Courier New"
                                       FontStyle="Italic"
                                       FontWeight="Light"/>
                            <!--<Button Name="ButtonTeste"
                                    HorizontalAlignment="Right"
                                    Click="ButtonTeste_Click"
                                    ToolTipService.ToolTip="Dados"
                                    Background="Transparent">
                                <StackPanel>
                                    <Border CornerRadius="10"  
                                            BorderBrush="Wheat" 
                                            BorderThickness="3">
                                        <TextBlock Margin="5" FontFamily="Segoe MDL2 Assets" Text="&#xE946;" Foreground="Wheat"/>
                                    </Border>
                                </StackPanel>
                            </Button>-->
                            <StackPanel x:ConnectionId='13' HorizontalAlignment="Right"
                                        Background="Transparent"
                                                                  >
                                <TextBlock ToolTipService.ToolTip="Dados"
                                           Margin="5" 
                                           FontSize="30"
                                           FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE946;"
                                           Foreground="Wheat"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </RelativePanel>

        <StackPanel Grid.Column="1" HorizontalAlignment="Stretch" Margin="50,20,0,0">
            <TextBlock x:ConnectionId='5'
                   Name="TextBlockOne"
                   FontSize="22"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"/>
            <TextBlock x:ConnectionId='6' Name="TextBlockTilte1"
                       Margin="0,20,0,0"
                       FontSize="16"
                       FontWeight="Bold"/>
            <TextBlock x:ConnectionId='7'
                   Name="TextBlockTwo"
                   FontSize="15"
                   FontStyle="Oblique"
                   HorizontalAlignment="Stretch"/>
            <TextBlock x:ConnectionId='8' Name="TextBlockTilte2"
                       FontSize="16"
                       FontWeight="Bold"/>
            <TextBlock x:ConnectionId='9'
                   Name="TextBlockThree"
                   FontSize="15"
                   FontStyle="Oblique"
                   HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</Page>

